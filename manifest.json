{
  "manifest_version": 3,
  "name": "Tangent â€“ Threaded Chat for Claude & ChatGPT",
  "version": "1.1.0",
  "description": "Branch off into side threads without leaving your main Claude or ChatGPT conversation",
  "permissions": [
    "clipboardWrite",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "chatgpt_iframe_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
